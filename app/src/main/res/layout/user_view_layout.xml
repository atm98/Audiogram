<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pic_user_single"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/profile_default_pic" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pic_user_single"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/pic_user_single"
        android:layout_toRightOf="@+id/pic_user_single"
        android:text="Name"
        android:textSize="30dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/user_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/user_name"
        android:layout_below="@+id/user_name"
        android:layout_marginTop="30dp"
        android:text="Status"
        android:textColor="@android:color/darker_gray"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/pic_user_single" />

</RelativeLayout>