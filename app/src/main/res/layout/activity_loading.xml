<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.agnt45.audiogram.LoadingActivity">

    <TextView
        android:id="@+id/WelcomeIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="casual"
        android:text="Welcome To Audiogram"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="28dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/logButton"
        android:layout_width="match_parent"
        android:backgroundTint="#ffffff"
        android:textColor="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:text="@string/already_a_member_sign_in"
        android:layout_below="@+id/WelcomeIntro"

        android:layout_marginTop="22dp" />

    <Button
        android:id="@+id/regButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorAccent"


        android:fontFamily="casual"

        android:text="@string/need_a_new_account"
        android:textColor="@android:color/white"
        android:layout_below="@+id/logButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
