<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.agnt45.audiogram.UserActivity"
    android:background="@color/colorPrimary">
    <include layout="@layout/app_bar_layout" android:id="@+id/user_layout_bar"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/pic_User"
        app:civ_border_color="@color/colorAccent"
        android:layout_marginTop="20sp"
        android:src="@drawable/profile_default_pic"
        android:layout_below="@+id/user_layout_bar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/User_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="DEFAULT NAME"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_below="@+id/pic_User"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/User_status"
        android:layout_width="match_parent"
        android:maxLines="5"
        android:layout_height="wrap_content"
        android:layout_below="@+id/User_name"
        android:layout_centerHorizontal="true"
        android:text="Its just a default status"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/Follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/User_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:text="Follow"
        android:backgroundTint="@android:color/white"/>

    <Button
        android:id="@+id/posts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Follow"
        android:layout_alignStart="@+id/Follow"
        android:layout_below="@+id/Follow"
        android:layout_marginTop="37dp"
        android:text="POSTS"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/FriendsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pic_User"
        android:layout_alignParentLeft="true"
        android:layout_alignStart="@+id/pic_User"

        android:layout_below="@+id/User_status"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="19dp"
        android:text="Friends"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/MutualFriendsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/FriendsCount"

        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:text="Mutual Friends"
        android:textColor="@android:color/white" />


</RelativeLayout>
